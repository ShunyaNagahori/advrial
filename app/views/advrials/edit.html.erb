<div class="flex">
  <%= turbo_frame_tag @advrial do %>
    <%= form_with model: @advrial, url: advrial_path(@advrial) do |f| %>
      <div class="border my-2 mx-1">
        <div class="p-2">
          <p class="text-2xl text-bold border-b mb-1">
            <%= f.text_field :title %>
          </p>
          <%= f.file_field :main_visual %>
          <p class="border-b mb-1"><%= f.date_field :start_date %> ã€œ <%= f.date_field :end_date %>
          <p class="border-b mb-2">
            <%= f.select :advrial_category_id, @advrial_categories.map{ |advrial_category| [advrial_category.name_in_locales, advrial_category.id] } %>
          </p>
          <%= f.text_area :description %>
        </div>
        <%= f.submit t('.update') %>
        <%= link_to t('.cancel'), user_advrials_path(current_user) %>
      </div>
    <% end %>
  <% end %>
</div>