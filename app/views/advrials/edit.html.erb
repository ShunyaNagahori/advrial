<%= turbo_frame_tag @advrial do %>
  <%= form_with model: @advrial, url: advrial_path(@advrial) do |f| %>
    <div class="border my-2 mx-1 h-96 w-auto">
      <div class="p-2">
        <p class="text-2xl text-bold border-b mb-1">
          <%= f.text_field :title %>
        </p>
        <%= f.file_field :main_visual %>
        <p class="border-b mb-1">
          <%= f.date_field :start_date %> ã€œ <%= f.date_field :end_date %>
        </p>
        <p class="border-b mb-2">
          <%= f.select :advrial_category_id, @advrial_categories.map{ |advrial_category| [advrial_category.name_in_locales, advrial_category.id] } %>
        </p>
        <div>
          <%= f.text_area :description %>
        </div>
        <div>
          <%= f.submit t('common.actions.edit.update'), class: 'btn' %>
          <%= link_to t('common.actions.edit.cancel'), user_advrials_path(current_user), class: 'backBtn' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>