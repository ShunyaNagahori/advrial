<%= turbo_frame_tag @advrial do %>
  <%= form_with model: @advrial, url: advrial_path(@advrial) do |f| %>
    <div class="border my-2 mx-1 h-auto w-auto">
      <div class="p-2">
        <p class="text-2xl text-bold border-b py-1 px-4"> 
          <%= f.text_field :title, class: "w-full" %>
        </p>
        <p class="border-b py-1 px-4">
          <%= f.date_field :start_date %> ã€œ <%= f.date_field :end_date %>
        </p>
        <p class="border-b py-1 px-4">
          <%= f.select :advrial_category_id, @advrial_categories.map{ |advrial_category| [advrial_category.name_in_locales, advrial_category.id] } %>
        </p>
        <div class="py-1 px-4">
          <%= f.file_field :main_visual, accept: "image/jpeg,image/gif,image/png" %>
        </div>
        <div class="border border-slate-500 border-dotted py-1 px-2 w-full">
          <%= f.text_area :description, class: "px-4 w-full" %>
        </div>
        <div class="space-x-2">
          <%= f.submit t('common.actions.edit.update'), class: 'btn' %>
          <%= link_to t('common.actions.edit.cancel'), user_advrials_path(current_user), class: 'backBtn' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>